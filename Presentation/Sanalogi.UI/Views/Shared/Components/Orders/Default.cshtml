@model List<OrderModel>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Orders</h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Order Name</th>
                    <th>Ordering Company</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>OrderDate</th>
                    <th>Sil & Düzenle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.OrderName</td>
                        <td>@item.OrderingCompany</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>@item.OrderDate</td>
                        <td>
                            <a class="btn btn-danger" name="delete" asp-controller="Order" asp-action="Remove" asp-route-id="@item.Id" id="@item.Id">Sil</a>
                            <a class="btn btn-primary" name="update" id="@item.Id" asp-controller="Order" asp-action="Get" asp-route-id="@item.Id">Düzenle</a>
                        </td>
                    </tr>}
            </tbody>
        </table>
    </div>
</div>